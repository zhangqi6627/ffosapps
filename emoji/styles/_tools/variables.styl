// helpers
$rounding         = 10


// colors
$dark             = #000000
$light            = #ffffff


// urls
$url-media       = '/media/'
$url-font         = $url-media + 'fonts/'
$url-img          = $url-media + 'img/'
$url-picto        = $url-img + 'pictos/'
$url-dyn          = $url-media + 'dyn/'

// urls hd
$url-hd           = $url-media + 'hd/'
$url-img-hd       = $url-hd + 'img/'
$url-picto-hd     = $url-img-hd + 'pictos/'
$url-dyn-hd       = $url-hd + 'dyn/'


// fonts
/*
// Custom font exemple (@font-face example in _font.styl)
$font-site        = "OpenSans"
$font             = $font-site, "Gill Sans MT","Gill Sans", Corbel, Arial, sans-serif
*/

$font             = Arial, "Helvetica Neue", Helvetica, sans-serif
$font-size        = 10
$font-root        = rnd( $font-size / 16 * 100%  )


// base colors
$text             = $dark
$bd               = $dark
$bg               = $light
$placeholder      = $dark


// titles
$tt-1             = $dark
$tt-1-bd          = $dark
$tt-1-bg          = $dark
$tt-2             = $dark
$tt-3             = $dark
$tt-4             = $dark
$tt-5             = $dark
$tt-6             = $dark


// links
$link             = $dark
$link-visited     = $dark
$link-hover       = $dark
$link-active      = $dark


// shadows
$shw-box          = 1px 1px 0 rgba( $dark, .7 )
$shw-text         = 1px 1px 0 rgba( $dark, .4 )


// transition
$anim-dur         = .3s
$anim-easing      = ease-in-out
$anim-delay       = .3s
$transition       = $anim-dur $anim-easing


// images
$blank-img        = 'data:image/png;base64,'
